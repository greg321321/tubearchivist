<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
xmlns:podcast="https://podcastindex.org/namespace/1.0"
xmlns:atom="http://www.w3.org/2005/Atom"
xmlns:content="http://purl.org/rss/1.0/modules/content/">
	<channel>
		<title>{{ playlist_info.playlist_name|slice:":255" }}</title>
		<link>{{ request.scheme }}://{{ request.META.HTTP_HOST }}{% url 'playlist_id' playlist_info.playlist_id %}</link>
		<description></description>
		<language>en-us</language>
		<itunes:category text="Music"/>
		<itunes:explicit>false</itunes:explicit>
		<podcast:locked>yes</podcast:locked>
		<itunes:image href="{{ request.scheme }}://{{ request.META.HTTP_HOST }}/auth/{{ api_token }}/cache/playlists/{{ playlist_info.playlist_id }}.jpg" />
		<atom:link href="{{ request.scheme }}://{{ request.META.HTTP_HOST }}/auth/{{ api_token }}{% url 'playlist_id_podcast' playlist_info.playlist_id format %}" rel="self" type="application/rss+xml"/>{% if results %}{% for video in results %}
		<item>
			<title>{{ video.title|slice:":255" }}</title>
			<link>{{ request.scheme }}://{{ request.META.HTTP_HOST }}{% url 'video' video.youtube_id %}</link>
			<description>{{ video.description|slice:":4000" }}</description>
			<pubDate>{{ video.published }}</pubDate>
			<guid isPermaLink="false">{{ video.youtube_id }}</guid>
			<enclosure length="{{ video.media_size }}" type="{{ mime_format }}" url="{{ request.scheme }}://{{ request.META.HTTP_HOST }}/auth/{{ api_token }}{{ video.media_url }}"/>
			<itunes:duration>{{ video.player.duration }}</itunes:duration>
			<itunes:image href="{{ request.scheme }}://{{ request.META.HTTP_HOST }}/auth/{{ api_token }}/cache/{{ video.vid_thumb_path }}"/>
			<itunes:block>yes</itunes:block>
			<itunes:episode>{{ video.idx }}</itunes:episode>
		</item>{% endfor %}{% endif %}
	</channel>
</rss>